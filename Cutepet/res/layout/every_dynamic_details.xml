<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/dynamic_details_comment_portrait"
        android:layout_width="@dimen/px100"
        android:layout_height="@dimen/px100"
        android:layout_marginBottom="@dimen/px44"
        android:layout_marginLeft="@dimen/px24"
        android:layout_marginRight="@dimen/px26"
        android:layout_marginTop="@dimen/px24"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/mid2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dynamic_details_comment_neckname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px31"
            android:text="@string/neckname"
            android:textColor="#2b2b2b"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/dynamic_details_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px24"
            android:layout_marginTop="@dimen/px24"
            android:text="@string/comment_content"
            android:textColor="#919191"
            android:textSize="@dimen/px20" />
    </LinearLayout>

    <TextView
        android:id="@+id/dynamic_details_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px40"
        android:text="@string/comment_time"
        android:textColor="#b8b8b8"
        android:textSize="@dimen/px18" />

</LinearLayout>