<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFDA44" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/resources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px29"
                android:layout_marginTop="@dimen/px29"
                android:paddingBottom="@dimen/px10"
                android:paddingLeft="@dimen/px10"
                android:paddingTop="@dimen/px10"
                android:text="@string/homepage"
                android:textColor="#333333"
                android:textSize="@dimen/px36" />

            <TextView
                android:id="@+id/strategy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px29"
                android:layout_marginLeft="@dimen/px73"
                android:layout_marginStart="@dimen/px73"
                android:layout_marginTop="@dimen/px29"
                android:paddingBottom="@dimen/px10"
                android:paddingRight="@dimen/px10"
                android:paddingTop="@dimen/px10"
                android:text="@string/strategy"
                android:textColor="#333333"
                android:textSize="@dimen/px36" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/mid_homepage_petstrategy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>