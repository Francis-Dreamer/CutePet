<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include layout="@layout/top_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_petStore_logo"
            android:layout_width="@dimen/px347"
            android:layout_height="@dimen/px511"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/baisejuxing" />

        <ImageView
            android:id="@+id/iv_petStore_select"
            android:layout_width="@dimen/px347"
            android:layout_height="@dimen/px511"
            android:layout_marginLeft="@dimen/px26"
            android:layout_toRightOf="@id/iv_petStore_logo"
            android:clickable="true"
            android:src="@drawable/zu_12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px44"
        android:paddingRight="@dimen/px40" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px111"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="店名："
                android:textColor="#262222"
                android:textSize="@dimen/px32" />

            <EditText
                android:id="@+id/ed_petStore_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px25"
                android:background="@null"
                android:hint="比蒙宠物"
                android:singleLine="true"  
                android:paddingBottom="@dimen/px20"
                android:paddingTop="@dimen/px20"
                android:textColor="#b5b5b5"
                android:textSize="@dimen/px32" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/fenge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px111"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="地址："
                android:textColor="#262222"
                android:textSize="@dimen/px32" />

            <EditText
                android:id="@+id/ed_petStore_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px25"
                android:background="@null"
                android:singleLine="true"  
                android:hint="重庆。。。。。。"
                android:paddingBottom="@dimen/px20"
                android:paddingTop="@dimen/px20"
                android:textColor="#b5b5b5"
                android:textSize="@dimen/px32" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/fenge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px111"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="宠物种类："
                android:textColor="#262222"
                android:textSize="@dimen/px32" />

            <EditText
                android:id="@+id/ed_petStore_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px25"
                android:background="@null"
                android:singleLine="true"  
                android:hint="我是宠物类别"
                android:paddingBottom="@dimen/px20"
                android:paddingTop="@dimen/px20"
                android:textColor="#b5b5b5"
                android:textSize="@dimen/px32" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>