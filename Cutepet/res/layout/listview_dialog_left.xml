<?xml version="1.0" encoding="utf-8"?>
<!-- 聊天对话框的左边 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/get_layout"
        android:layout_marginTop="@dimen/px30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/from_userhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/from_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/from_userhead"
            android:layout_marginLeft="@dimen/px5"
            android:layout_marginRight="@dimen/px120"
            android:layout_toRightOf="@id/from_userhead"
            android:background="@drawable/chat_ubble"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:lineSpacingExtra="2dp"
            android:text="@string/hello_world" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30" >

        <ImageView
            android:id="@+id/send_userhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/send_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/send_userhead"
            android:layout_marginLeft="@dimen/px120"
            android:layout_marginRight="@dimen/px5"
            android:layout_toLeftOf="@id/send_userhead"
            android:background="@drawable/chat_send_background"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:text="@string/hello_world"
            android:textColor="#8E8E8E" />
    </RelativeLayout>

</LinearLayout>