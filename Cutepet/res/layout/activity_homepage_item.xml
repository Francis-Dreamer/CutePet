<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/iv_homepage_item_picture"
        android:layout_width="@dimen/px370"
        android:layout_height="@dimen/px250"
        android:scaleType="fitXY"
        android:src="@drawable/test_homepage" />
    <TextView
        android:id="@+id/tv_homepage_item_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_homepage_item_picture"
        android:layout_alignLeft="@id/iv_homepage_item_picture"
        android:layout_alignRight="@id/iv_homepage_item_picture"
        android:alpha="0.2"
        android:background="@android:color/black"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/px8"
        android:paddingBottom="@dimen/px8"
        android:text="我是测试名字"
        android:singleLine="true"
        android:textColor="@android:color/white" />
</RelativeLayout>