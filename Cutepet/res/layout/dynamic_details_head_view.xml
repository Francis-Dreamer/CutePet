<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/px24" >

        <ImageView
            android:id="@+id/dynamic_details_portrait"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_marginBottom="@dimen/px28"
            android:layout_marginLeft="@dimen/px24"
            android:layout_marginRight="@dimen/px25"
            android:layout_marginTop="@dimen/px24"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/tuoyuan_11" />

        <TextView
            android:id="@+id/dynamic_details_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px13"
            android:layout_marginTop="@dimen/px40"
            android:layout_toRightOf="@id/dynamic_details_portrait"
            android:text="@string/nickname"
            android:textColor="#2b2b2b"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/dynamic_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_nickname"
            android:layout_toRightOf="@id/dynamic_details_portrait"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="#919191"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/dynamic_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_nickname"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@id/dynamic_details_time"
            android:gravity="center"
            android:text="@string/address"
            android:textColor="#919191"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/dynamic_details_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_portrait"
            android:layout_marginBottom="@dimen/px19"
            android:layout_marginLeft="@dimen/px24"
            android:text="@string/content"
            android:textColor="#333333"
            android:textSize="@dimen/px28" />

        <com.dream.cutepet.view.MyGridView
            android:id="@+id/dynamic_details_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_content"
            android:layout_marginLeft="@dimen/px24"
            android:layout_marginRight="@dimen/px24"
            android:horizontalSpacing="@dimen/px12"
            android:verticalSpacing="@dimen/px12" />

        <TextView
            android:id="@+id/add_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px24"
            android:layout_marginTop="@dimen/px39"
            android:background="@drawable/every_all_dynamic_add_attention_background"
            android:paddingBottom="@dimen/px4"
            android:paddingLeft="@dimen/px10"
            android:paddingRight="@dimen/px10"
            android:paddingTop="@dimen/px4"
            android:text="@string/add_attention"
            android:textColor="#333333"
            android:textSize="@dimen/px28" />
    </RelativeLayout>

    <View
        android:id="@+id/fenge_view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px24"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px10"
        android:paddingTop="@dimen/px10" >

        <LinearLayout
            android:id="@+id/llayout_details_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px24"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/dynamic_details_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px30"
            android:drawableLeft="@drawable/shoucang_1"
            android:drawablePadding="@dimen/px10"
            android:gravity="center"
            android:text="@string/num"
            android:textColor="#b8b8b8"
            android:textSize="@dimen/px18" />
    </LinearLayout>

    <View
        android:id="@+id/fenge_view_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px24"
        android:background="#eeeeee" />

</LinearLayout>