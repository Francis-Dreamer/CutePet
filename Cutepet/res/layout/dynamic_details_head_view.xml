<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/dynamic_details_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px28"
            android:layout_marginEnd="@dimen/px25"
            android:layout_marginLeft="@dimen/px24"
            android:layout_marginRight="@dimen/px25"
            android:layout_marginStart="@dimen/px24"
            android:layout_marginTop="@dimen/px24"
            android:src="@drawable/tuoyuan_11" />

        <TextView
            android:id="@+id/dynamic_details_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px13"
            android:layout_marginTop="@dimen/px31"
            android:layout_toEndOf="@id/dynamic_details_portrait"
            android:layout_toRightOf="@id/dynamic_details_portrait"
            android:text="@string/nickname"
            android:textColor="#2b2b2b"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/dynamic_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_nickname"
            android:layout_toEndOf="@id/dynamic_details_portrait"
            android:layout_toRightOf="@id/dynamic_details_portrait"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="#919191"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/dynamic_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_nickname"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginStart="@dimen/px20"
            android:layout_toEndOf="@id/dynamic_details_time"
            android:layout_toRightOf="@id/dynamic_details_time"
            android:gravity="center"
            android:text="@string/address"
            android:textColor="#919191"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/dynamic_details_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_portrait"
            android:layout_marginBottom="@dimen/px19"
            android:layout_marginLeft="@dimen/px24"
            android:layout_marginStart="@dimen/px24"
            android:text="@string/content"
            android:textColor="#333333"
            android:textSize="@dimen/px28" />

        <ImageView
            android:id="@+id/dynamic_details_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_details_content"
            android:layout_marginBottom="@dimen/px12"
            android:layout_marginLeft="@dimen/px24"
            android:layout_marginRight="@dimen/px24"
            android:scaleType="fitXY"
            android:src="@drawable/tuceng88" />

        <TextView
            android:id="@+id/add_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/px24"
            android:layout_marginRight="@dimen/px24"
            android:layout_marginTop="@dimen/px39"
            android:background="@drawable/every_all_dynamic_add_attention_background"
            android:paddingBottom="@dimen/px4"
            android:paddingLeft="@dimen/px10"
            android:paddingRight="@dimen/px10"
            android:paddingTop="@dimen/px4"
            android:text="@string/add_attention"
            android:textColor="#333333"
            android:textSize="@dimen/px28" />
    </RelativeLayout>

    <View
        android:id="@+id/fenge_view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px24"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/dynamic_details_praise_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginStart="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:src="@drawable/mid2" />

        <ImageView
            android:id="@+id/dynamic_details_praise_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginStart="@dimen/px10"
            android:layout_marginTop="@dimen/px30"
            android:layout_toEndOf="@id/dynamic_details_praise_1"
            android:layout_toRightOf="@id/dynamic_details_praise_1"
            android:src="@drawable/mid3" />

        <ImageView
            android:id="@+id/dynamic_details_praise_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginStart="@dimen/px10"
            android:layout_marginTop="@dimen/px30"
            android:layout_toEndOf="@id/dynamic_details_praise_2"
            android:layout_toRightOf="@id/dynamic_details_praise_2"
            android:src="@drawable/mid4" />

        <ImageView
            android:id="@+id/dynamic_details_praise_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginStart="@dimen/px10"
            android:layout_marginTop="@dimen/px30"
            android:layout_toEndOf="@id/dynamic_details_praise_3"
            android:layout_toRightOf="@id/dynamic_details_praise_3"
            android:src="@drawable/mid5" />

        <ImageView
            android:id="@+id/dynamic_details_praise_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginStart="@dimen/px10"
            android:layout_marginTop="@dimen/px30"
            android:layout_toEndOf="@id/dynamic_details_praise_4"
            android:layout_toRightOf="@id/dynamic_details_praise_4"
            android:src="@drawable/mid6" />

        <TextView
            android:id="@+id/dynamic_details_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginTop="@dimen/px48"
            android:gravity="center"
            android:text="@string/num"
            android:textColor="#b8b8b8"
            android:textSize="@dimen/px18" />
    </RelativeLayout>

    <View
        android:id="@+id/fenge_view_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px24"
        android:background="#eeeeee" />

</LinearLayout>