<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical" >

        <include layout="@layout/top_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_pet_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_pet_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px26"
                android:layout_weight="4"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/zu_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/px30"
            android:layout_weight="5"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px44"
            android:paddingRight="@dimen/px40" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="品种："
                    android:textColor="#262222"
                    android:textSize="@dimen/px32" />

                <EditText
                    android:id="@+id/ed_pet_breed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px25"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入宠物品种"
                    android:singleLine="true"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/px32" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/fenge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="主人寄语："
                    android:textColor="#262222"
                    android:textSize="@dimen/px32" />

                <EditText
                    android:id="@+id/ed_pet_jiyu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px25"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入主人寄语"
                    android:singleLine="true"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/px32" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/fenge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="地址："
                    android:textColor="#262222"
                    android:textSize="@dimen/px32" />

                <TextView
                    android:id="@+id/ed_pet_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px25"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:hint="点击获取地址"
                    android:singleLine="true"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/px32" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>