<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#eeeeee"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px16"
    android:paddingRight="@dimen/px16" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px10" >

            <ImageView
                android:id="@+id/square_portrait"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:layout_marginLeft="@dimen/px14"
                android:layout_marginRight="@dimen/px17"
                android:layout_marginTop="@dimen/px14"
                android:src="@drawable/pet_10" />

            <TextView
                android:id="@+id/square_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px14"
                android:layout_marginTop="@dimen/px27"
                android:layout_toRightOf="@id/square_portrait"
                android:text="@string/nickname"
                android:textColor="#333333"
                android:textSize="@dimen/px24" />

            <TextView
                android:id="@+id/square_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/square_nickname"
                android:layout_toRightOf="@id/square_portrait"
                android:text="@string/square_time"
                android:textColor="#c7c7c7"
                android:textSize="@dimen/px20" />
        </RelativeLayout>

        <TextView
            android:id="@+id/square_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px11"
            android:layout_marginLeft="@dimen/px14"
            android:layout_marginTop="@dimen/px10"
            android:text="@string/square_content"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />

        <com.dream.cutepet.view.MyGridView
            android:id="@+id/square_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px14"
            android:layout_marginRight="@dimen/px14"
            android:numColumns="auto_fit"
            android:verticalSpacing="@dimen/px12"
            android:horizontalSpacing="@dimen/px12"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginLeft="@dimen/px14"
            android:layout_marginRight="@dimen/px14"
            android:layout_marginTop="@dimen/px30"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/square_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/address"
                android:text="@string/address"
                android:textColor="#58b7e3"
                android:textSize="@dimen/px24" />

            <TextView
                android:id="@+id/square_praise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px20"
                android:drawableLeft="@drawable/shoucang_1"
                android:drawablePadding="@dimen/px10"
                android:text="@string/num"
                android:textColor="#919191"
                android:textSize="@dimen/px24" />

            <TextView
                android:id="@+id/square_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px20"
                android:drawableLeft="@drawable/pinglun_1"
                android:drawablePadding="@dimen/px10"
                android:text="@string/num"
                android:textColor="#919191"
                android:textSize="@dimen/px24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>