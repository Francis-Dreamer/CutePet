<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include layout="@layout/top_menu" />

    <ImageView
        android:id="@+id/iv_petStore_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/pet_store_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/px30"
        android:layout_weight="5"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px44"
        android:paddingRight="@dimen/px40" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="店名："
                android:textColor="#262222"
                android:textSize="@dimen/px32" />

            <TextView
                android:id="@+id/tv_petStore_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px25"
                android:gravity="center_vertical"
                android:text="比蒙宠物"
                android:textColor="#b5b5b5"
                android:textSize="@dimen/px32" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/fenge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="地址："
                android:textColor="#262222"
                android:textSize="@dimen/px32" />

            <TextView
                android:id="@+id/tv_petStore_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/px25"
                android:text="重庆。。。。。。"
                android:textColor="#b5b5b5"
                android:textSize="@dimen/px32" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/fenge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="宠物种类："
                android:textColor="#262222"
                android:textSize="@dimen/px32" />

            <TextView
                android:id="@+id/tv_petStore_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/px25"
                android:text="我是宠物类别"
                android:textColor="#b5b5b5"
                android:textSize="@dimen/px32" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_petStore_send"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/px30"
        android:layout_marginTop="@dimen/px30"
        android:layout_weight="1"
        android:background="@drawable/shape_petstore_call"
        android:gravity="center"
        android:paddingBottom="@dimen/px5"
        android:paddingLeft="@dimen/px130"
        android:paddingRight="@dimen/px130"
        android:paddingTop="@dimen/px5"
        android:text="联系Ta"
        android:textColor="@color/black"
        android:textSize="@dimen/px35" />

</LinearLayout>