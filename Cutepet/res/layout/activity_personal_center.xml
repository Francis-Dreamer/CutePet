<?xml version="1.0" encoding="utf-8"?>
<!-- 个人中心 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFDA44" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px90"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="#333333"
                android:textSize="@dimen/px36" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relative_weidenglu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px420"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/image_toxiang"
                    android:layout_width="@dimen/px160"
                    android:layout_height="@dimen/px160"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px26"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:id="@+id/linear_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_toxiang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px11"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/px6"
                        android:text="登录"
                        android:textColor="#333333"
                        android:textSize="@dimen/px28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:textColor="#333333"
                        android:textSize="@dimen/px28" />

                    <TextView
                        android:id="@+id/text_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/px6"
                        android:text="注册"
                        android:textColor="#333333"
                        android:textSize="@dimen/px28" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px96"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.8"
                    android:background="#58B7E3"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/px28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px10"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/px28" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px10"
                        android:layout_marginTop="@dimen/px10"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/px28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px10"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/px28" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px10"
                        android:layout_marginTop="@dimen/px10"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/px28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px10"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/px28" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_yidenglu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px420"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/image_toxiang_hide"
                    android:layout_width="@dimen/px160"
                    android:layout_height="@dimen/px160"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px26"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:id="@+id/linear_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_toxiang_hide"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px10"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_nicheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/text_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px11"
                        android:text="“添加昵称”"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_nickname"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/text_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px11"
                        android:text="123456"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px96"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.8"
                    android:background="#58B7E3"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/text_attention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px10"
                            android:text="0"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px26"
                        android:layout_marginTop="@dimen/px10"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/text_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px10"
                            android:text="0"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px10"
                        android:layout_marginTop="@dimen/px10"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/text_enshrine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px10"
                            android:text="0"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px24"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linear_personalInformation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px96"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px40"
                        android:layout_marginTop="@dimen/px30"
                        android:src="@drawable/personal_information" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px26"
                        android:layout_weight="1"
                        android:text="资料信息"
                        android:textColor="#333333"
                        android:textSize="@dimen/px28" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/px40"
                        android:padding="@dimen/px10"
                        android:src="@drawable/youjiantou" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_marginLeft="@dimen/px40"
                    android:layout_marginRight="@dimen/px40"
                    android:background="#eeeeee" />

                <LinearLayout
                    android:id="@+id/linear_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px96"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px40"
                        android:layout_marginTop="@dimen/px30"
                        android:src="@drawable/account" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px26"
                        android:layout_weight="1"
                        android:text="账户管理"
                        android:textColor="#333333"
                        android:textSize="@dimen/px28" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/px40"
                        android:padding="@dimen/px10"
                        android:src="@drawable/youjiantou" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px24"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/linear_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px96"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px40"
                    android:layout_marginTop="@dimen/px30"
                    android:src="@drawable/about" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px26"
                    android:layout_weight="1"
                    android:text="关于宠萌"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px40"
                    android:padding="@dimen/px10"
                    android:src="@drawable/youjiantou" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px24"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/linear_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px96"
                android:layout_marginBottom="@dimen/px10"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px40"
                    android:layout_marginTop="@dimen/px30"
                    android:src="@drawable/set" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px26"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px40"
                    android:padding="@dimen/px10"
                    android:src="@drawable/youjiantou" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>