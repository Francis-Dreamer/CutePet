<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include layout="@layout/top_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px17"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110" >

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px42"
                android:layout_marginRight="@dimen/px21"
                android:text="昵称"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <EditText
                android:id="@+id/input_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/nickname"
                android:background="@null"
                android:hint="请输入名字"
                android:singleLine="true"
                android:textColor="#c9c3bd"
                android:textSize="@dimen/px28" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110" >

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px42"
                android:layout_marginRight="@dimen/px21"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <RadioGroup
                android:id="@+id/rgroup_setPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/sex"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_sex"
                    android:drawablePadding="@dimen/px40"
                    android:drawableRight="@drawable/nan" />

                <RadioButton
                    android:id="@+id/woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px40"
                    android:button="@drawable/selector_sex"
                    android:drawablePadding="@dimen/px40"
                    android:drawableRight="@drawable/nv" />
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110" >

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px42"
                android:layout_marginRight="@dimen/px21"
                android:text="年龄"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <EditText
                android:id="@+id/input_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/age"
                android:background="@null"
                android:hint="输入年龄"
                android:singleLine="true"
                android:textColor="#c9c3bd"
                android:textSize="@dimen/px28" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110" >

            <TextView
                android:id="@+id/breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px42"
                android:layout_marginRight="@dimen/px21"
                android:text="品种"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <EditText
                android:id="@+id/input_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/breed"
                android:background="@null"
                android:hint="请输入品种"
                android:singleLine="true"
                android:textColor="#c9c3bd"
                android:textSize="@dimen/px28" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px135" >

            <TextView
                android:id="@+id/gexing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px9"
                android:layout_marginLeft="@dimen/px42"
                android:layout_marginRight="@dimen/px21"
                android:layout_marginTop="@dimen/px35"
                android:text="个性"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <TextView
                android:id="@+id/qianming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gexing"
                android:layout_marginLeft="@dimen/px42"
                android:layout_marginRight="@dimen/px21"
                android:text="签名"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <EditText
                android:id="@+id/input_yourstory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/gexing"
                android:background="@null"
                android:hint="写下你今天的故事"
                android:singleLine="true"
                android:textColor="#c9c3bd"
                android:textSize="@dimen/px28" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>