<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px10"
    android:paddingLeft="@dimen/px24"
    android:paddingRight="@dimen/px24"
    android:paddingTop="@dimen/px10" >

    <ImageView
        android:id="@+id/pet_strategy_image"
        android:layout_width="@dimen/px172"
        android:layout_height="@dimen/px142"
        android:layout_marginRight="@dimen/px24"
        android:scaleType="fitXY"
        android:src="@drawable/jinmao" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pet_strategy_comment_chinese_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px10"
            android:text="@string/name"
            android:textColor="#2b2b2b"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/pet_strategy_comment_english_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px10"
            android:text="@string/name"
            android:textColor="#474747"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/pet_strategy_content_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:textColor="#616161"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/px20" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/px32"
        android:layout_height="@dimen/px35"
        android:layout_gravity="center_vertical"
        android:src="@drawable/youjiantou" />

</LinearLayout>